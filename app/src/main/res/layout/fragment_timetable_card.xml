<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetable_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/app_bar"
    android:layout_margin="5dp"
    android:elevation="15dp"
    card_view:cardCornerRadius="3dp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"
        android:elevation="3dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/timetable_icon"
            android:src="@drawable/sidebar_card"
            android:background="#ff0101"
            android:layout_below="@+id/timetable_subject_name"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sub_name"
            android:id="@+id/timetable_subject_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sub_details"
            android:id="@+id/timetable_subject_details"
            android:layout_below="@+id/timetable_subject_name"
            android:layout_alignLeft="@+id/timetable_bt_details"
            android:layout_alignStart="@+id/timetable_bt_details"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="29dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:id="@+id/timetable_bt_details"
            android:layout_alignBottom="@+id/timetable_icon"
            android:layout_toEndOf="@+id/timetable_icon"
            style="?android:attr/borderlessButtonStyle" />

    </RelativeLayout>
</android.support.v7.widget.CardView>